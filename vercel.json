{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "supportsResponseStreaming": true,
        "includeFiles": ["lib/**", "auth.ts", "middleware.ts"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/auth/(.+)",
      "dest": "/api/auth/$1",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/api/students(.*)",
      "dest": "/api/students$1",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    {
      "src": "/api/courses(.*)",
      "dest": "/api/courses$1",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    {
      "src": "/api/.*",
      "status": 404
    },
    {
      "src": "/(.*)",
      "dest": "/",
      "status": 200
    }
  ]
}

